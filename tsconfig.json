{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      // This needs to be mirrored in babel.config.js
      // Components is a directory with sub directories
      "translations": ["src/translations/index"],
      "components": ["src/components/index"],
      "contexts": ["src/contexts/index"],
      "navigation": ["src/navigation/index"],
      "utils": ["src/utils/index"],
      "hooks": ["src/hooks/index"],
      "consts": ["src/constants"],
      "types": ["src/types"]
    }
  },
  "exclude": ["node_modules"]
}
